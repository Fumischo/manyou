<h1><%= t('.title') %></h1>
<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto tasks__linkBox">
    <%= link_to '一覧', tasks_path, class: 'btn btn-outline-dark' %>
    <%= link_to '編集', edit_task_path(@task), class: 'btn btn-outline-dark' %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>

<div class="p-comment__list">
  <div class="p-comment__listTitle"></div>
  <p><%= t('.name') %>:: <%= @task.name %></p>
  <p><%= t('.description') %>:<%= @task.description %></p>
  <p>終了期限: <%= @task.deadline.strftime("%Y年%m月%d日") %></p>
  <p>進捗状況: <%= @task.status %></p>
  <p>カテゴリー:<%= @task.labels.pluck(:name) %></p>

</div>