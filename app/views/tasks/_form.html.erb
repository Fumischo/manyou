<%= form_with(model: @task, local: true, url: choose_new_or_edit ) do |t| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="task_title">
    <%= t.label :name %><br>
    <%= t.text_field :name %>
  </div>
  <div class="task_title">
    <%= t.label :description %><br>
    <%= t.text_area :description %>
  </div>
  <%= t.submit %>
<% end %>

<%= link_to "一覧画面にもどる", tasks_path %>